{
  "$schema": "https://json.schemastore.org/claude-code-settings",
  "includeCoAuthoredBy": false,
  "model": "sonnet",
  "theme": "dark",
  "permissions": {
    "allow": [
      "Read(~/.zshrc)",
      "Bash(fd:*)",
      "Bash(rg:*)",
      "Bash(sg:*)",
      "Bash(cat:*)",
      "Bash(tree:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(less:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr status:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr checkout:*)",
      "Bash(bun run:*)",
      "Bash(npm run:*)",
      "Bash(pnpm run:*)",
      "Bash(yarn run:*)",
      "Bash(markdownlint:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:github.com)",
      "mcp__ide__getDiagnostics"
    ],
    "deny": [
      "Read(node_modules)"
    ]
  }
}
