{
  "$schema": "https://json.schemastore.org/claude-code-settings",
  "includeCoAuthoredBy": false,
  "model": "sonnet",
  "theme": "dark",
  "permissions": {
    "allow": [
      "Read(~/.zshrc)",
      "Bash(fd:*)",
      "Bash(rg:*)",
      "Bash(sg:*)",
      "Bash(cat:*)",
      "Bash(tree:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(less:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git push:*)",
      "Bash(git show:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr status:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr checkout:*)",
      "Bash(bun run:*)",
      "Bash(npm run:*)",
      "Bash(pnpm run:*)",
      "Bash(yarn run:*)",
      "Bash(jest:*)",
      "Bash(vitest:*)",
      "Bash(markdownlint:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:github.com)",
      "mcp__ide__getDiagnostics",
      "mcp__language-server__definition",
      "mcp__language-server__diagnostics",
      "mcp__language-server__edit_file",
      "mcp__language-server__references",
      "mcp__language-server__rename_symbol",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs"
    ],
    "deny": []
  }
}
