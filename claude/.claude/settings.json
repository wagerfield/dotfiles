{
  "$schema": "./settings.schema.json",
  "includeCoAuthoredBy": false,
  "model": "sonnet",
  "theme": "dark",
  "permissions": {
    "allow": [
      "Read(~/.zshrc)",
      "Bash(ls:*)",
      "Bash(rg:*)",
      "Bash(sg:*)",
      "Bash(fd:*)",
      "Bash(fzf:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(tree:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(less:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(bun run:*)",
      "Bash(npm run:*)",
      "Bash(pnpm run:*)",
      "Bash(yarn run:*)",
      "Bash(markdownlint:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:github.com)"
    ]
  }
}
