{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://anthropic.com/claude-code/schema.json",
  "description": "Claude Code settings.json schema",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "The schema for the settings.json file"
    },
    "apiKeyHelper": {
      "type": "string",
      "description": "Custom script path to generate an auth value"
    },
    "autoUpdaterStatus": {
      "type": "string",
      "description": "Enable or disable the auto-updater",
      "enum": ["enabled", "disabled"],
      "default": "enabled"
    },
    "cleanupPeriodDays": {
      "type": "number",
      "description": "How long to locally retain chat transcripts (in days)",
      "default": 30,
      "minimum": 0
    },
    "env": {
      "type": "object",
      "description": "Environment variables applied to every session",
      "additionalProperties": false,
      "patternProperties": {
        "^[A-Z_]+$": {
          "type": "string",
          "description": "Environment variable value"
        }
      },
      "default": {}
    },
    "includeCoAuthoredBy": {
      "type": "boolean",
      "description": "Include 'co-authored-by Claude' byline in git commits and pull requests",
      "default": true
    },
    "model": {
      "type": "string",
      "description": "Claude model to use",
      "enum": [null, "haiku", "opus", "sonnet"]
    },
    "permissions": {
      "type": "object",
      "description": "Tool permissions",
      "additionalProperties": false,
      "properties": {
        "allow": {
          "type": "array",
          "description": "List of allowed tool rules",
          "items": { "$ref": "#/$defs/rule" },
          "uniqueItems": true
        },
        "deny": {
          "type": "array",
          "description": "List of denied tool rules",
          "items": { "$ref": "#/$defs/rule" },
          "uniqueItems": true
        }
      },
      "default": {
        "allow": [],
        "deny": []
      }
    },
    "preferredNotifChannel": {
      "type": "string",
      "description": "Preferred notification channel",
      "enum": [
        "iterm2",
        "iterm2_with_bell",
        "terminal_bell",
        "notifications_disabled"
      ],
      "default": "iterm2"
    },
    "theme": {
      "type": "string",
      "description": "UI theme configuration",
      "enum": ["dark", "light", "light-daltonized", "dark-daltonized"]
    },
    "verbose": {
      "type": "boolean",
      "description": "Show full bash and command outputs",
      "default": false
    }
  },
  "$defs": {
    "rule": {
      "type": "string",
      "description": "Tool permission rule (e.g., 'Bash(ls:*)', 'Read(~/.zshrc)', 'WebFetch(domain:github.com)')",
      "pattern": "^(Agent|Bash|Read|Write|Edit|MultiEdit|Glob|Grep|LS|Task|NotebookRead|NotebookEdit|WebFetch|WebSearch)\\(?"
    }
  },
  "examples": [
    {
      "includeCoAuthoredBy": false,
      "cleanupPeriodDays": 30,
      "verbose": false,
      "model": "sonnet",
      "theme": "dark",
      "permissions": {
        "allow": [
          "Read(~/.zshrc)",
          "Bash(ls:*)",
          "Bash(git log:*)",
          "WebFetch(domain:anthropic.com)"
        ],
        "deny": [
          "Bash(rm:*)",
          "Bash(curl:*)",
          "Bash(wget:*)",
          "WebFetch(domain:bad.actor.com)"
        ]
      }
    }
  ]
}
