// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "cmd-shift-g": "git_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "shift-alt-i": "editor::SplitSelectionIntoLines"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "alt-enter": ["workspace::SendKeystrokes", "space cmd-shift-e"], // Open and focus file
      "c": "project_panel::CollapseAllEntries"
    }
  },
  {
    "context": "GitPanel && ChangesList",
    "bindings": {
      "alt-enter": ["workspace::SendKeystrokes", "ctrl-enter ctrl-shift-g"] // Open and focus file
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "down": "editor::MoveDown",
      "up": "editor::MoveUp"
    }
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "down": "editor::SelectDown",
      "up": "editor::SelectUp"
    }
  },
  {
    "context": "vim_operator == a || vim_operator == i || vim_operator == cs",
    "bindings": {
      "q": "vim::MiniQuotes",
      "b": "vim::MiniBrackets"
    }
  }
]
